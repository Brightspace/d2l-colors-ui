{
  "name": "d2l-colors",
  "version": "2.0.0",
  "private": true,
  "description": "Polymer web component and Sass variables for the D2L color palette",
  "keywords": [
    "d2l",
    "ui",
    "colors",
    "sass",
    "scss",
    "web component"
  ],
  "scripts": {
    "postinstall": "bower install",
    "build:sass": "node-sass ./test/test.scss ./test/test.css",

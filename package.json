    "test:lint:html": "eslint *.html",
    "test:lint:wc": "polymer lint -i d2l-colors.html",
    "test": "npm run test:lint && npm run build:sass"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BrightspaceUI/colors.git"
  },
